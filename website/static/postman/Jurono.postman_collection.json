{
  "info": {
    "name": "Jurono API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://sandbox.api.jurono.eu/v1"
    },
    {
      "key": "token",
      "value": "your-token-here"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "List Leads",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/leads?limit=50",
          "host": ["{{baseUrl}}"],
          "path": ["leads"],
          "query": [
            {
              "key": "limit",
              "value": "50"
            }
          ]
        }
      }
    }
  ]
}